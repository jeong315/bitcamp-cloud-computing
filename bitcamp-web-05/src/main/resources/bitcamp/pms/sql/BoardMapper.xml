<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="board">
  
  <resultMap type="Board" id="BoardMap">
    <id column="bno" property="no"/>
    <result column="titl" property="title"/>
    <result column="cont" property="content"/>
    <result column="cdt" property="createDate"/>
  </resultMap>
  
    <select id="selectList" resultType="BoardMap" parameterType="map">
        select bno, titl, cdt  
          from pms2_board
          <if test="startIndex != null and pageSize != null">
            limit #{startIndex}. #{pageSize}
          </if>    
    </select>
    
    <select id="selectOne" resultType="BoardMap" parameterType="Int">
        select *
          from pms2_board
         where bno = ${value}   
    </select>

    <insert id="insert" parameterType="board">
        insert into pms2_board(titl, cont, cdt)
        values (#{title}, #{content}, now())
    </insert>
    
    <update id="update" parameterType="board">
        update pms2_board
           set titl = #{title}
               cont = #{content}
         where bno = #{no} 
    </update>
    
    <delete id="delete" parameterType="Int">
        delete from pms2_board
         where bno = #{value}
    </delete>
  
  </mapper>